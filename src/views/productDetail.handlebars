<div
  class="container h-screen mx-auto text-black flex flex-col justify-between"
>
  <nav class="grid grid-cols-2 py-8">
    <div class="flex align-middle items-center">
      <a href="/products"><p class="font-bold text-2xl">BookifyStore</p></a>
      <p class="text-lg mx-6 items-center text-gray-600">Categories</p>
      <input
        type="text"
        placeholder="Search"
        class="text-white bg-slate-200 border-slate-200 py-2 px-4 rounded lg:w-full"
        disabled
      />
    </div>
    <div class="flex align-center items-center justify-end">
      {{#if isUser}}
        <a href="/cart" class="flex items-center mx-3 lg:mx-6"><i
            class="fa-solid fa-cart-shopping text-xl"
          ></i>
          <p class="ms-2">My cart</p>
        </a>
      {{/if}}

      {{#if isAdmin}}
        <a href="/adminPanel" class="flex items-center mx-3 lg:mx-6"><i
            class="fa-solid fa-gear text-xl"
          ></i>
          <p class="ms-2">Dashboard</p>
        </a>
      {{/if}}

      <a href="/profile" class="flex items-center mx-3 lg:mx-6">
        <i class="fa-solid fa-user text-xl"></i>
        <p class="ms-2">{{name}}</p>
      </a>

      <button class="bg-black text-white py-2 px-4 rounded" id="logout-btn">
        <i class="fa-solid fa-door-open me-2"></i>
        Logout
      </button>

    </div>
  </nav>

  <hr />

  <h2 class="text-center text-6xl font-bold my-8">Product detail</h2>
  <p class="pb-6 font-bold">Home > Products > All</p>

  <div class="lg:w-4/5 flex flex-wrap">
    <img
      alt="ecommerce"
      class="lg:w-1/2 w-full lg:h-auto h-64 object-cover object-center rounded"
      src="{{product.thumbnail}}"
    />
    <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
      <h2
        class="text-sm title-font text-gray-500 tracking-widest"
      >{{product.category}}</h2>
      <h1 class="text-3xl title-font font-medium mb-1">{{product.title}}</h1>
      <div class="flex mb-4">
        <span class="flex items-center">
          <svg
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 text-green-400"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
          <svg
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 text-green-400"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
          <svg
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 text-green-400"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
          <svg
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 text-green-400"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
          <svg
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 text-green-400"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
          <span class="ml-3">4 Reviews</span>
        </span>
        <span
          class="flex ml-3 pl-3 py-2 border-l-2 border-gray-800 text-gray-500 space-x-2"
        >
          <a>
            <svg
              fill="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-5 h-5"
              viewBox="0 0 24 24"
            >
              <path
                d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
              ></path>
            </svg>
          </a>
          <a>
            <svg
              fill="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-5 h-5"
              viewBox="0 0 24 24"
            >
              <path
                d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
              ></path>
            </svg>
          </a>
          <a>
            <svg
              fill="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-5 h-5"
              viewBox="0 0 24 24"
            >
              <path
                d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"
              ></path>
            </svg>
          </a>
        </span>
      </div>
      <p class="leading-relaxed">{{product.description}}</p>
      <div class="flex flex-col mt-6 pb-5 border-b-2 border-gray-800 mb-5">
        <div class="flex">
          <span class="mr-3">Status</span>
          {{#if product.status}}
            <span
              class="bg-green-500 text-white py-1 px-2 rounded-full text-xs"
            >Available</span>
          {{else}}
            <span
              class="bg-red-500 text-white py-1 px-2 rounded-full text-xs"
            >Unavailable</span>
          {{/if}}
        </div>
        <div class="flex mt-2">
          <span class="mr-3">Stock</span>
          {{product.stock}}
        </div>
        <div class="flex items-center">
          <span class="mr-3">Code</span>
          {{product.code}}
        </div>
      </div>

      <div class="flex justify-between">
        <span class="title-font font-medium text-2xl">U$D
          {{product.price}}</span>
        {{#if product.status}}
          <button
            class="flex items-center ml-auto text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded"
            id="addProduct"
            data-product-id="{{_doc._id}}"
          >
            <i class="fa-solid fa-cart-shopping mr-3"></i>
            Add to cart</button>
        {{else}}
          <button
            class="flex ml-auto text-white bg-red-500 border-0 py-2 px-6 focus:outline-none hover:bg-red-600 rounded disabled hover:cursor-not-allowed"
          >Not available
          </button>
        {{/if}}
      </div>
      <div class="flex mt-10">
        <a href="/products">
          <button
            class="flex items-center ml-auto text-white bg-gray-500 border-0 py-2 px-6 focus:outline-none hover:bg-gray-600 rounded"
          ><i class="fa-solid fa-arrow-left mr-3"></i>
            Go back
          </button>
        </a>
      </div>
    </div>
  </div>

  {{#if isUser}}
    <div class="fixed bottom-10 right-10">
      <div class="rounded-full bg-black py-5 px-4 hover:cursor-pointer">
        <a href="/chat">
          <i class="fa-solid fa-comments text-white text-3xl"></i>
        </a>
      </div>
    </div>
  {{/if}}

  <footer class="text-gray-600 body-font">
    <div
      class="container px-5 py-8 mx-auto flex items-center sm:flex-row flex-col"
    >
      <a
        class="flex title-font font-medium items-center md:justify-start justify-center text-gray-900"
      >
        <i class="fa-solid fa-book"></i>
        <span class="ml-3 text-xl">BookifyStore</span>
      </a>
      <p
        class="text-sm text-gray-500 sm:ml-4 sm:pl-4 sm:border-l-2 sm:border-gray-200 sm:py-2 sm:mt-0 mt-4"
      >© 2024 BookifyStore —
        <span class="text-gray-600 ml-1">Emiliano Rodriguez</span>
      </p>
      <span
        class="inline-flex sm:ml-auto sm:mt-0 mt-4 justify-center sm:justify-start"
      >
        <a
          class="ml-3 text-gray-500"
          href="https://www.linkedin.com/in/erodriguez-dev/"
          target="_blank"
        >
          <svg
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="0"
            class="w-5 h-5"
            viewBox="0 0 24 24"
          >
            <path
              stroke="none"
              d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
            ></path>
            <circle cx="4" cy="4" r="2" stroke="none"></circle>
          </svg>
        </a>
      </span>
    </div>
  </footer>

  <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
  <script src="/js/home.js"></script>
  <script src="/js/logout.js"></script>
</div>