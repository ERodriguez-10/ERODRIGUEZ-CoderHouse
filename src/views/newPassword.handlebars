<div
  class="min-h-screen"
  style="background-size: cover; background-repeat: no-repeat; background-image: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0.6) 100%), url('/assets/fondo-der.jpg');"
>
  <div class="container mx-auto">
    <div class="flex h-full items-center justify-end">
      <div
        class="text-black bg-slate-100 min-w-[550] rounded-2xl box-shadow: 0 2.8px 2.2px rgba(0, 0, 0, 0.034), 0 6.7px 5.3px rgba(0, 0, 0, 0.048), 0 12.5px 10px rgba(0, 0, 0, 0.06), 0 22.3px 17.9px rgba(0, 0, 0, 0.072), 0 41.8px 33.4px rgba(0, 0, 0, 0.086), 0 100px 80px rgba(0, 0, 0, 0.12) py-8"
      >
        <h1
          class="text-center flex justify-center align-middle text-4xl font-bold pt-8"
        >
          <img
            src="/assets/padunlock.png"
            alt="Login icon"
            class="h-8 w-8 self-center me-4"
          />
          New Password
        </h1>
        <p class="text-center mt-3 mb-6 text-gray-600">Update your password</p>

        <form
          id="newPassword-form"
          class="px-8 flex flex-col"
          action="/login"
          method="POST"
        >
          <label for="user_email" class="font-bold mt-4">Email</label>
          <input
            type="email"
            id="user_email"
            name="user_email"
            placeholder="johndoe@example.com"
            autocomplete="email"
            class="px-4 py-2 border border-gray-300 rounded-lg mt-2 text-black"
            required
          />

          <div class="mt-4">
            <label for="user_password" class="font-bold">Password</label>
            <div class="flex">
              <input
                type="password"
                id="user_password"
                name="user_password"
                placeholder="********"
                class="px-4 py-2 border border-gray-300 rounded-lg mt-2 text-black w-full"
                required
              />
              <div
                style="margin-left: -35px; margin-top: 17px"
                id="showPasswordIcon"
              >
                <img
                  src="/assets/hidden.png"
                  alt="Hidden icon"
                  class="w-6 h-6 self-center hover:cursor-pointer"
                />
              </div>

              <div
                class="hidden"
                style="margin-left: -35px; margin-top: 17px; display: none"
                id="hidePasswordIcon"
              >
                <img
                  src="/assets/view.png"
                  alt="View icon"
                  class="w-6 h-6 self-center hover:cursor-pointer"
                />
              </div>
            </div>
          </div>

          <button
            type="submit"
            class="bg-black text-white px-4 py-2 rounded-lg mt-6 hover:bg-emerald-700 transition-all duration-300"
            id="submit-btn"
            data-token-id={{token}}
          >Change Password</button>

          <div
            class="hidden bg-red-400 rounded-lg py-2 text-center mt-4"
            id="alertMessage"
          >
            <p>Ups! Invalid credentials</p>
          </div>

          <div
            class="hidden bg-emerald-400 rounded-lg py-2 text-center mt-4"
            id="emailSent"
          >
            <p>Email was sent successfully!</p>
          </div>
        </form>

        <div class="flex items-center justify-center my-6">
          <div class="w-24 h-px bg-gray-400"></div>
          <span class="mx-4 text-gray-400">or continue with</span>
          <div class="w-24 h-px bg-gray-400"></div>
        </div>

        <div class="flex justify-center my-6 px-8">
          <a
            href="/api/auth/github"
            class="border-2 border-gray-500 bg-slate-100 w-1/2 px-4 py-2 mx-2 rounded-lg hover:bg-slate-300 transition-all duration-300 flex justify-center items-center"
          >
            <p>Login with</p>
            <img src="/assets/github.png" alt="Github" class="ms-2 w-6 h-6" />
          </a>

          <a
            href="/api/auth/google"
            class="border-2 border-gray-500 bg-slate-100 w-1/2 px-4 py-2 mx-2 rounded-lg hover:bg-slate-300 transition-all duration-300 flex justify-center items-center"
          >
            <p>Login with</p>
            <img src="/assets/google.png" alt="Google" class="ms-2 w-6 h-6" />
          </a>
        </div>

        <a
          href="/register"
          class="block text-center mt-10 mb-4 text-gray-600 hover:underline"
        >
          Don't have an account? Sing up
        </a>
      </div>
    </div>
  </div>

  <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
  <script src="/js/updatePassword.js"></script>
</div>