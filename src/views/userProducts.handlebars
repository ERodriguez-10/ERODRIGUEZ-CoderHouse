<div
  class="container h-screen mx-auto text-black flex flex-col justify-between"
>
  <div>
    <nav class="grid grid-cols-2 py-8">
      <div class="flex align-middle items-center">
        <a href="/products"><p class="font-bold text-2xl">BookifyStore</p></a>
        <p class="text-lg mx-6 items-center text-gray-600">Categories</p>
        <input
          type="text"
          placeholder="Search"
          class="text-white bg-slate-200 border-slate-200 py-2 px-4 rounded lg:w-full"
          disabled
        />
      </div>
      <div class="flex align-center items-center justify-end">
        {{#if isUser}}
          <a href="/cart" class="flex items-center mx-3 lg:mx-6"><i
              class="fa-solid fa-cart-shopping text-xl"
            ></i>
            <p class="ms-2">My cart</p>
          </a>
        {{/if}}

        {{#if isAdmin}}
          <a href="/adminPanel" class="flex items-center mx-3 lg:mx-6"><i
              class="fa-solid fa-gear text-xl"
            ></i>
            <p class="ms-2">Dashboard</p>
          </a>
        {{/if}}

        <a href="/profile" class="flex items-center mx-3 lg:mx-6">
          <i class="fa-solid fa-user text-xl"></i>
          <p class="ms-2">{{name}}</p>
        </a>

        <button class="bg-black text-white py-2 px-4 rounded" id="logout-btn">
          <i class="fa-solid fa-door-open me-2"></i>
          Logout
        </button>

      </div>
    </nav>

    <hr />

    <h2 class="text-center text-6xl font-bold my-8 pb-6">Your space</h2>

    <div class="grid grid-cols-12">
      <div class="col-span-2 bg-white shadow rounded-lg border">
        <div class="px-5 hover:bg-gray-200">
          <a href="/profile" class="block py-6 px-2 w-full rounded-sm">
            <p>My profile</p>
          </a>
        </div>

        <div class="bg-black text-white px-5">
          <a
            href="/profile/my-products"
            class="block py-6 px-2 w-full rounded-sm"
          >
            <p>My products</p>
          </a>
        </div>
        <div class="px-5 hover:bg-gray-200">

          <a href="#" class="block py-6 px-2 w-full rounded-sm">
            <p>My carts</p>
          </a>
        </div>
        <div class="px-5 hover:bg-gray-200">

          <a href="#" class="block px-2 py-6 w-full rounded-sm">
            <p>My dashboard</p>
          </a>
        </div>

      </div>
      <div
        class="bg-white overflow-hidden shadow rounded-lg border mx-10 col-span-10"
      >
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Your products
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            Here you can see all your publications or create one.
          </p>
        </div>
        <div class="pb-5">
          <div class="flex flex-col">
            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
              <div
                class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8"
              >
                <div
                  class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg mx-4"
                >
                  <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                      <tr>
                        <th
                          scope="col"
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Title
                        </th>
                        <th
                          scope="col"
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Description
                        </th>
                        <th
                          scope="col"
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Category
                        </th>
                        <th
                          scope="col"
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Price
                        </th>
                        <th
                          scope="col"
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Stock
                        </th>
                        <th
                          scope="col"
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Status
                        </th>
                      </tr>
                    </thead>
                    <tbody class="bg-white text-black divide-y divide-gray-200">
                      {{#each products}}
                        <tr>
                          <td class="px-6 py-4 whitespace-nowrap">
                            {{_doc.title}}
                          </td>
                          <td class="px-6 py-4 text-ellipsis">
                            {{_doc.description}}
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            {{_doc.category}}
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            {{_doc.price}}
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            {{_doc.stock}}
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            {{_doc.status}}
                          </td>
                        </tr>
                      {{/each}}
                      <!-- More rows... -->
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{#if isUser}}
    <div class="fixed bottom-10 right-10">
      <div class="rounded-full bg-black py-5 px-4 hover:cursor-pointer">
        <a href="/chat">
          <i class="fa-solid fa-comments text-white text-3xl"></i>
        </a>
      </div>
    </div>
  {{/if}}

  <footer class="text-gray-600 body-font">
    <div
      class="container px-5 py-8 mx-auto flex items-center sm:flex-row flex-col"
    >
      <a
        class="flex title-font font-medium items-center md:justify-start justify-center text-gray-900"
      >
        <i class="fa-solid fa-book"></i>
        <span class="ml-3 text-xl">BookifyStore</span>
      </a>
      <p
        class="text-sm text-gray-500 sm:ml-4 sm:pl-4 sm:border-l-2 sm:border-gray-200 sm:py-2 sm:mt-0 mt-4"
      >© 2024 BookifyStore —
        <span class="text-gray-600 ml-1">Emiliano Rodriguez</span>
      </p>
      <span
        class="inline-flex sm:ml-auto sm:mt-0 mt-4 justify-center sm:justify-start"
      >
        <a
          class="ml-3 text-gray-500"
          href="https://www.linkedin.com/in/erodriguez-dev/"
          target="_blank"
        >
          <svg
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="0"
            class="w-5 h-5"
            viewBox="0 0 24 24"
          >
            <path
              stroke="none"
              d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
            ></path>
            <circle cx="4" cy="4" r="2" stroke="none"></circle>
          </svg>
        </a>
      </span>
    </div>
  </footer>

  <script src="/js/logout.js"></script>
</div>